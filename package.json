{
  "name": "backend",
  "version": "1.0.0",
  "description": "BBM",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest --testTimeout=30000",
    "test:wallet": "jest wallet.test.js --testTimeout=30000",
    "test:watch": "jest --watch",
    "server": "nodemon server.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo \"No build step required\"",
    "seed": "node seed-database.js",
    "seed:product-sections": "node scripts/seed-product-sections.js",
    "verify:product-sections": "node scripts/verify-product-sections.js",
    "start:cluster": "CLUSTER_MODE=true node server.js",
    "start:single": "CLUSTER_MODE=false node server.js",
    "pm2:start": "pm2 start ecosystem.config.cjs --env production",
    "pm2:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:stop": "pm2 stop bigandbest-api",
    "pm2:restart": "pm2 restart bigandbest-api",
    "pm2:reload": "pm2 reload bigandbest-api",
    "pm2:delete": "pm2 delete bigandbest-api",
    "pm2:logs": "pm2 logs bigandbest-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "rudraksh",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.4",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "razorpay": "^2.9.6",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "@types/jest": "^29.5.12"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controller/**/*.js",
      "services/**/*.js",
      "!**/node_modules/**"
    ]
  }
}